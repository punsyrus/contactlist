<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>MainServ</servlet-name>
        <servlet-class>com.max.servlet.MainServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServ</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Change</servlet-name>
        <servlet-class>com.max.servlet.ChangeContact</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Change</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Create</servlet-name>
        <servlet-class>com.max.servlet.CreateContact</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

</web-app>